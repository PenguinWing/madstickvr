       <style name="airhotspot"
        url="./img/arrow.png"
        autoalpha="true"
        crop="0|0|85|120"
        onovercrop="85|0|85|120"
        ondowncrop="85|0|85|120"
        distorted="true"
        inverserotation="true"
        edge="bottom"
        alpha="0.0"
        visible="false"
        ox="0" oy="0" d="60"
        zorder="9"
        shown="true"
        vlimit="10"
        onclick="set(events.onresize, ''); if(linkedscene, loadscene(get(linkedscene),null,MERGE|KEEPVIEW,BLEND(1)); );"
        onhover="tween(alpha, 1, 0.5, default); showtext(get(scene[get(linkedscene)].title), custom_style);"
        onover="tween(alpha, 0.1, 0.25);"
        onout="tween(alpha, 1.0, 0.25);"
        ondown.touch="onover(); asyncloop(pressed, onhover(); );"
        onup.touch="onout();"
        />

    <events name="aircompass" keep="true" onviewchange="
        if(layer[autoplay_button].state != now

        ,
            mod(cur_hlookat, get(view.hlookat), 360);

                for (set(i, 0);, i LT hotspot.count, inc(i)
                ,
                    if (hotspot[get(i)].st == 'arrow'
                    ,
                        if(cur_vlookat LT -10,
                            set(hotspot[get(i)].alpha, 0);
                            set(hotspot[get(i)].visible, false);
                            
                        );

                        if(cur_vlookat LE 0
                        ,
                            add(trans_alpha, cur_vlookat, 10);
                            div(trans_alpha, 10);
                            set(hotspot[get(i)].alpha, get(trans_alpha));,

                            set(hotspot[get(i)].alpha, 1);
                            set(hotspot[get(i)].visible, true);
                        );

                        if(layer[screenshot_button].state == closed
                        ,
                            set(hotspot[get(i)].alpha, 0);
                            set(hotspot[get(i)].visible, false);
                        );

                        aircompass_orientate2(get(hotspot[get(i)].name), get(cur_hlookat));
                    );
                );
    )"
    />  <!-- events -->

	<style name="hotspot" url="./img/hotspot.png" crop="0|0|50|50" edge="center"/>
	<style name="text" url="plugins/textfield.swf" background="true" bgroundedge="7" bgborder="2px, 0xA9BA3C, 1" align="bottom" y="-15" css="text-align:center; color:#000000; font-family:Monospace; font-weight:bold; font-size:12px;" enabled="false" alpha="0.8"/>

    <action name="aircompass_orientate2">
        set(cur_hlookat, %2);
        copy(cur_vlookat, view.vlookat);
        add(hotspot_north, get(hotspot[%1].north),180);
        if (hotspot_north GT 360,
            sub(hotspot_north, 360);
        );

        sub(rxang, -90, get(cur_vlookat));
        sub(rzang, get(hotspot_north), get(cur_hlookat));

        set(hotspot[%1].ath,    get(cur_hlookat));
        set(hotspot[%1].atv, get(cur_vlookat));

        set(hotspot[%1].rx, get(rxang));
        set(hotspot[%1].rz, get(rzang));

        sub(cur_ox, get(cur_hlookat), get(hotspot_north));
        mul(cur_ox, Math.PI);
        div(cur_ox, 180);
        Math.sin(cur_ox);
        mul(cur_ox, get(hotspot[%1].d));

        sub(cur_oy, get(cur_hlookat), get(hotspot_north));
        mul(cur_oy, Math.PI);
        div(cur_oy, 180);
        Math.cos(cur_oy);
        mul(cur_oy, get(hotspot[%1].d));


        add(cur_oy, 300); <!-- Added by Min -->

        set(hotspot[%1].ox, get(cur_ox));
        set(hotspot[%1].oy, get(cur_oy));
    </action>



	<action name="do_crop_animation">
    <!-- add attributes to the hotspot -->
    registerattribute(xframes, calc((imagewidth / %1) BOR 0));
    registerattribute(yframes, calc((imageheight / %2) BOR 0));
    registerattribute(frames, calc(xframes * yframes));
    registerattribute(frame, 0);

    set(crop, '0|0|%1|%2');

    setinterval(calc('crop_anim_' + name), calc(1.0 / %3),
        if(loaded,
            inc(frame);
            if(frame GE frames, if(onlastframe !== null, onlastframe() ); set(frame,0); );
            mod(xpos, frame, xframes);
            div(ypos, frame, xframes);
            Math.floor(ypos);
            mul(xpos, %1);
            mul(ypos, %2);
            calc(crop, xpos + '|' + ypos + '|%1|%2');
          ,
            clearinterval(calc('crop_anim_' + name));
        );
    );
    </action>

